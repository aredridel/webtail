{
  "compilerOptions": {
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ],
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "typeAcquisition": {
    "enable": true
  },
  "lib": ["dom"],
  "include": ["src"]
}
