{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ],
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "lib": ["dom"],
  "include": ["src/**/*.ts"]
}

